<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="viewmodel"
                type="ch.protonmail.android.protonmailtest.ui.forecast.ViewModelForecast" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_180"
                android:layout_marginTop="@dimen/global_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:downloadImg="@{viewmodel.upcomingDayDetail.image}"
                tools:ignore="ContentDescription" />
        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/header_txt_size"
                android:textStyle="bold"
                android:text="@{viewmodel.upcomingDayDetail.description}"
                app:layout_constraintEnd_toEndOf="@id/img"
                app:layout_constraintStart_toStartOf="@id/img"
                app:layout_constraintTop_toBottomOf="@id/img"
                tools:text="Sunny"/>
        <TextView
                android:id="@+id/timezone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{viewmodel.upcomingDayDetail.description}"
                app:layout_constraintEnd_toStartOf="@id/timeZone"
                app:layout_constraintStart_toStartOf="@id/img"
                app:layout_constraintTop_toBottomOf="@id/description" />
        <TextView
                android:id="@+id/timeZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{viewmodel.upcomingDayDetail.description}"
                app:layout_constraintEnd_toEndOf="@id/img"
                app:layout_constraintStart_toEndOf="@id/timezone_text"
                app:layout_constraintTop_toBottomOf="@id/description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>